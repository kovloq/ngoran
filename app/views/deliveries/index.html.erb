<p id="notice"><%= notice %></p>

<h1>Listing Deliveries</h1>

<table class="table">
  <thead>
    <tr>
      
      <th>Koran</th>
      <th>Amount</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        
        <td><%= delivery.koran.name %></td>
        <td><%= delivery.amount %></td>
        <td><%= delivery.monday ? raw('<i class="glyphicon glyphicon-ok"></i>') : raw('<i class="glyphicon glyphicon-remove"></i>') %></td>
        <td><%= delivery.tuesday ? raw('<i class="glyphicon glyphicon-ok"></i>') : raw('<i class="glyphicon glyphicon-remove"></i>') %></td>
        <td><%= delivery.wednesday ? raw('<i class="glyphicon glyphicon-ok"></i>') : raw('<i class="glyphicon glyphicon-remove"></i>') %></td>
        <td><%= delivery.thursday ? raw('<i class="glyphicon glyphicon-ok"></i>') : raw('<i class="glyphicon glyphicon-remove"></i>') %></td>
        <td><%= delivery.friday ? raw('<i class="glyphicon glyphicon-ok"></i>') : raw('<i class="glyphicon glyphicon-remove"></i>') %></td>
        <td><%= delivery.saturday ? raw('<i class="glyphicon glyphicon-ok"></i>') : raw('<i class="glyphicon glyphicon-remove"></i>') %></td>
        <td><%= delivery.sunday ? raw('<i class="glyphicon glyphicon-ok"></i>') : raw('<i class="glyphicon glyphicon-remove"></i>') %></td>
        <td><%= link_to 'Show', customer_delivery_path(params[:customer_id],delivery) %></td>
        <td><%= link_to 'Edit', edit_customer_delivery_path(params[:customer_id],delivery) %></td>
        <td><%= link_to 'Destroy', customer_delivery_path(params[:customer_id],delivery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

