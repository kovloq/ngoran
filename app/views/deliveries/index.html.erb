<p id="notice"><%= notice %></p>

<h1>Listing Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Koran</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.customer_id %></td>
        <td><%= delivery.koran_id %></td>
        <td><%= delivery.monday %></td>
        <td><%= delivery.tuesday %></td>
        <td><%= delivery.wednesday %></td>
        <td><%= delivery.thursday %></td>
        <td><%= delivery.friday %></td>
        <td><%= delivery.saturday %></td>
        <td><%= delivery.sunday %></td>
        <td><%= link_to 'Show', customer_delivery_path(params[:customer_id],delivery) %></td>
        <td><%= link_to 'Edit', edit_customer_delivery_path(params[:customer_id],delivery) %></td>
        <td><%= link_to 'Destroy', customer_delivery_path(params[:customer_id],delivery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

