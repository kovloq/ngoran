<%= simple_form_for(@delivery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :customer_id %>
    <%= f.input :koran_id %>
    <%= f.input :monday %>
    <%= f.input :tuesday %>
    <%= f.input :wednesday %>
    <%= f.input :thursday %>
    <%= f.input :friday %>
    <%= f.input :saturday %>
    <%= f.input :sunday %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
