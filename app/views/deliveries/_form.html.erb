<div class="tabbable-line">
  <ul class="nav nav-tabs ">
    <li class="active">
      <a data-toggle="tab" href="#tab_1" aria-expanded="true"> Customer Info </a>
    </li>
    <li >
      <a data-toggle="tab" href="#tab_2" aria-expanded="true">Map</a>
    </li>
  </ul>
  <div class="tab-content">
    <!-- Begin Tab For Customer -->
    <div id="tab_1" class="tab-pane active">
      <div class="portlet box red">
          <div class="portlet-title">
            <div class="caption">
              <i class="fa fa-user"></i>
              New Delivery
            </div>
          </div>
          <div class="portlet-body form">
            <%= simple_form_for(@delivery, multipart: true) do |f| %>
              <%= f.error_notification %>

              <div class="form-body">
                <h3 class="form-section">Customer Info</h3>
                <!-- Customer Input -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group string optional">
                      <label for="customer_name" class="string optional control-label">Name</label>
                      <input type="text" id="customer_name" name="customer[name]" class="string optional form-control">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <label for="customer_address" class="string optional control-label">Address</label>            
                    <div style="text-align:left" class="input-group string optional">
                      <input type="text" id="customer_address" name="customer[address]" class="string optional form-control">
                      <span class="input-group-btn">
                        <a id="address_check" class="btn green" href="javascript:;" data-original-title="" title="">
                        <i class="fa fa-check"></i> Check </a>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group string optional">
                      <label for="customer_building_name" class="string optional control-label">Building Name</label>
                      <input type="text" id="customer_building_name" name="customer[building_name]" class="string optional form-control">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group string optional">
                      <label for="customer_room_number" class="string optional control-label">Room Number</label>
                      <input type="text" id="customer_room_number" name="customer[room_number]" class="string optional form-control">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group string optional">
                      <label for="customer_latitude" class="string optional control-label">Latitude</label>
                      <input type="text" readonly="" id="customer_latitude" name="customer[latitude]" class="string optional form-control">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group string optional">
                      <label for="customer_longitude" class="string optional control-label">Longitude</label>
                      <input type="text" readonly="" id="customer_longitude" name="customer[longitude]" class="string optional form-control">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-3">Image</label>
                   <div class="col-md-9">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                      <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                        <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt=""/>
                      </div>
                      <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
                      </div>
                      <div>
                        <span class="btn default btn-file">
                        <span class="fileinput-new">
                        Select image </span>
                        <span class="fileinput-exists">
                        Change </span>
                        <input type="file" name="...">
                        </span>
                        <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput">
                        Remove </a>
                      </div>
                    </div>
                  </div>
                </div>
                <h3 class="form-section">新聞</h3>
                <div class="row">
                  <div class="col-md-2">
                    <select name="delivery[koran_id][]" class="form-control">
                        <% @korans.each do |koran| %>
                        <option value="<%= koran.id %>"><%= koran.name %></option>
                        <% end %>
                      </select>
                  </div>
                  <div class="col-md-2">
                    <div class="spinner pull-left">
                        <div class="input-group input-small">
                          <input type="text" readonly="" maxlength="3" class="spinner-input form-control">
                          <div class="spinner-buttons input-group-btn btn-group-vertical">
                            <button class="btn spinner-up btn-xs blue" type="button">
                            <i class="fa fa-angle-up"></i>
                            </button>
                            <button class="btn spinner-down btn-xs blue" type="button">
                            <i class="fa fa-angle-down"></i>
                            </button>
                          </div>

                        </div>
                      </div>
                      <div style="margin-top:5px;margin-left:4px;" class="pull-left">Mai</div>
                  </div>
                  <div class="col-md-2">
                    <input type="checkbox"/> Chirashi
                  </div>
                  <div class="col-md-2">
                    <input type="checkbox"/> Sore
                  </div>
                  <div class="col-md-2">
                    <input type="checkbox"/> Tulis
                  </div>
                  <div class="col-md-2">
                    <button class="btn btn-danger" type="button">
                        <i class="fa fa-trash"></i>Delete
                    </button>
                  </div>
                </div>
                
                <div class="text-center row"><a href="" class="btn btn-primary">Add</a></div>
                <h3 class="form-section">Days</h3>
                <%= f.input :monday, label: @days[0].name_kana,as: :boolean,wrapper_html: { class: 'checkbox-inline' } %>
                <%= f.input :tuesday,label: @days[1].name_kana,as: :boolean,wrapper_html: { class: 'checkbox-inline' } %>
                <%= f.input :wednesday,label: @days[2].name_kana,as: :boolean,wrapper_html: { class: 'checkbox-inline' } %>
                <%= f.input :thursday,label: @days[3].name_kana,as: :boolean,wrapper_html: { class: 'checkbox-inline' } %>
                <%= f.input :friday,label: @days[4].name_kana,as: :boolean,wrapper_html: { class: 'checkbox-inline' } %>
                <%= f.input :saturday,label: @days[5].name_kana,as: :boolean,wrapper_html: { class: 'checkbox-inline' } %>
                <%= f.input :sunday,label: @days[6].name_kana,as: :boolean,wrapper_html: { class: 'checkbox-inline' } %>

              </div>

              <div class="form-actions right">
                <%= f.button :submit,class: "btn-primary" %>
              </div>
            <% end %>
          </div>
      </div>
    </div><!-- End Tab Customer -->
    <div id="tab_2" class="tab-pane">
      <div class="portlet box red">
        <div class="portlet-title">
          <div class="caption">
            <i class="fa fa-map-marker"></i>
            New Delivery
          </div>
        </div>
        <div class="portlet-body form">
          <div id="map" style="width: 100%;height: 500px"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="http://maps.googleapis.com/maps/api/js"></script>
<script>
$(document).ready(function(){
jQuery('.nav-tabs a[href="#tab_2"]').on('shown.bs.tab', function(){
       google.maps.event.trigger(map, 'resize');
       map.setZoom(15); //You need to reset zoom
       map.setCenter(myLatlng); //You need to reset the center
  });
$('.spinner').spinner();
//Google Map
function initialize() {
var mapProp = {
    center:new google.maps.LatLng(33.58,130.42),
    zoom:15,
    scrollwheel: false,
    mapTypeId:google.maps.MapTypeId.ROADMAP
  };
  var map=new google.maps.Map(document.getElementById("map"),mapProp);
}
google.maps.event.addDomListener(window, 'load', initialize);
})
</script>
